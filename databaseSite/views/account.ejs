<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <% include ./partials/head %>
</head>

<body>
    <header>
        <% include ./partials/header %>
    </header>
    <div class="container">

        <div class="page-header text-center">
            <h1>
                <img src="smartGarden_icon.png" width="150" height="200" />
                <br/>
                <br/>Profile Page</h1>
            <a href="/account" class="btn btn-default btn-sm">Account</a>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row">

            <!-- LOCAL INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3>
                        <span class="fa fa-user"></span> Local
                    </h3>

                    <% if (user.local.email) { %>
                        <p>
                            <strong>id</strong>:
                            <%= user._id %>
                                <br>
                                <strong>email</strong>:
                                <%= user.local.email %>
                                    <br>
                        </p>
                        <% } %>

                </div>
            </div>

        </div>

    </div>
</body>

</html>